<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
        body {
            background-color: #C0DEFF;
            padding: 2em 1em;
            font-family: Arial,
                Helvetica, sans-serif;
        }

        .container {
            background-color: #FFE5F1;
            padding:
                1em 0.6em;
            border-radius: 10px;
            max-width: 36rem;
            margin: 0 auto;
        }

        .color-primary {
            color: #ADA2FF;
        }

        .color-danger {
            color: ADA2FF;
        }

        .color-success {
            color: #28a745;
        }

        .color-white {
            color: #fff;
        }

        .color-blue {
            color: #0a1930;
        }

        a {
            font-size: 1.4rem;
            text-decoration: none;
        }

        .btn {
            font-size: 1.4rem;
            font-weight: 400;
            padding: 6px 8px;
            margin: 0 5px 0 0;
            border: 1px solid transparent;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-primary {
            color:
                #fff;
            background: #007bff;
        }

        .btn-secondary {
            color: #fff;
            border: 1px solid #fff;
            background: transparent;
        }

        .btn-danger {
            color: #fff;
            background: orangered;
        }

        .btn-success {
            color: #fff;
            background: #28a745;
        }

        .flex-center {
            display: flex;
            justify-content: center;
            align-items:
                center;
        }

        .logo {
            padding: 1em 0.6em;
            background-color: #ADA2FF;
            border-radius: 12px;
        }

        .my {
            margin:
                2rem 0;
        }
    </style>
</head>

